@model IEnumerable<Job_Offers_Website.Models.Category>
@{
    ViewBag.Title = "الصفحة الرئيسية";
}

<div class="jumbotron alert alert-info">
    <h3>مرحبا بك عزيزي الزائر</h3>
    <p>مرحبا بك في فضاء البحث عن الوظائف بإختلاف أصنافها , يمكنك نشر وظيفة إن كنت ناشرا ويمكنك التقدم إلي الوظيفة إذا كنت تبحث عن وظيفة</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">المزيد من التفاصيل &raquo;</a></p>
</div>

@foreach (var item in Model)
{
    <div class="panel panel-info">
        <div class="panel-heading"><h1>@Html.DisplayFor(modelItem => item.CategoryName)</h1></div>
        
        <div class="row panel-body">
            <h5>@Html.DisplayFor(modelItem => item.CategoryDescription)</h5>
            @foreach (var subItem in item.Jobs)
            {
                <div class="col-md-3 thumbnail item">
                    <img src="~/uploads/@subItem.JobImage" />
                    <h3>@Html.DisplayFor(modelItem => subItem.JobTitle)</h3>
                    <h5>@Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(modelItem => subItem.JobContent).ToString()))</h5>
                    @Html.ActionLink("التفاصيل", "Details", new { JobId = subItem.id },new { @class="btn btn-primary"})
                </div>
            }
        </div>
    </div>
}
