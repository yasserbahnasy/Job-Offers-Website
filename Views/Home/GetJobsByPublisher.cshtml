@model IEnumerable<Job_Offers_Website.Models.JobViewModel>

@{
    ViewBag.Title = "المتقدمين إلي العمل";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@foreach (var gr in Model)
{
    <h3>@gr.JobTitle</h3>
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                إسم الباحث
            </th>
            <th>
                نص الرسالة
            </th>
            <th>
                تاريخ الإرسال
            </th>
        </tr>
        @foreach (var item in gr.Items)
        {
            <tr>
                <td>
                    @item.user.UserName
                </td>
                <td>
                    @item.message
                </td>
                <td>
                    @item.ApplayDate
                </td>
            </tr>
        }
    </table>
}