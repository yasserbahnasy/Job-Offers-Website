@model Job_Offers_Website.Models.Job

@{
    ViewBag.Title = "حذف وظيفة";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>حذف وظيفة</h2>

<h3>هل أنت متأكد من حذف الوظيفة ؟</h3>
<div>
    <h4>حذف وظيفة</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobContent)
        </dt>

        <dd>
            @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(model => model.JobContent).ToString()))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobImage)
        </dt>

        <dd>
            <img src="~/uploads/@Html.DisplayFor(model => model.JobImage)" class="thumbnail" style="width:70px; height:70px" />
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="تأكيد الحذف" class="btn btn-default" /> |
            @Html.ActionLink("الرجوع إلي قائمة الوظائف", "Index")
        </div>
    }
</div>
